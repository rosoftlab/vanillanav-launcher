<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="NavigationButton" tools:ignore="ResourceName">
        <!-- Disables padding, icon scaling and the button background -->
        <attr name="vn_no_style" format="boolean" />
        <!-- Selects the icon size-->
        <attr name="vn_icon_size" format="enum">
            <!-- 24dp icon -->
            <enum name="small" value="0x01" />
            <!-- 48dp icon -->
            <enum name="big" value="0x02" />
        </attr>
        <!-- required field for navigation, add from the administrative tools -->
        <attr name="vn_venue_id" format="integer" />
        <!-- required field for navigation, add from the administrative tools -->
        <attr name="vn_destination_id" format="string" />
        <!-- invert the icon for use on a dark background -->
        <attr name="vn_invert" format="boolean" />
    </declare-styleable>
</resources>